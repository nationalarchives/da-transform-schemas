{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "timestamp": {
      "type": "integer"
    },
    "UUIDs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "patternProperties": {
          "^[a-zA-Z0-9_-]+-UUID$": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
          }
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    },
    "producer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "process": {
          "type": "string"
        },
        "type": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "judgment",
            "standard",
            null
          ]
        },
        "environment": {
          "type": "string"
        },
        "event-name": {
          "type": "string",
          "enum": [
            "bagit-validated"
          ]
        },
        "version": {
          "type": ["string", "object"]
        }
      },
      "required": [
        "name",
        "process",
        "type",
        "environment",
        "event-name"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "bagit-validated": {
          "type": "object",
          "properties": {
            "reference": {
              "type": "string"
            },
            "s3-bucket": {
              "type": "string"
            },
            "s3-bagit-name": {
              "type": "string"
            },
            "s3-object-root": {
              "type": "string"
            },
            "validated-files": {
              "type": "object",
              "properties": {
                "path": {
                  "type": "string"
                },
                "root": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false,
              "required": [
                "path",
                "root",
                "data"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "reference",
            "s3-bucket",
            "s3-bagit-name",
            "number-of-retries",
            "errors",
            "s3-object-root",
            "validated-files"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "bagit-validated"
      ]
    }
  },
  "required": [
    "version",
    "timestamp",
    "UUIDs",
    "parameters"
  ],
  "additionalProperties": false
}
