{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "timestamp": {
      "type": "integer"
    },
    "UUIDs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "patternProperties": {
          "^[a-zA-Z0-9_-]+-UUID$": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
          }
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    },
    "producer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "process": {
          "type": "string"
        },
        "type": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "judgment",
            "standard",
            null
          ]
        },
        "environment": {
          "type": "string"
        },
        "event-name": {
          "type": "string",
          "enum": [
            "bagit-validation-error"
          ]
        },
        "version": {
          "type": ["string", "object"]
        }
      },
      "required": [
        "name",
        "process",
        "type",
        "environment",
        "event-name"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "bagit-validation-error": {
          "type": "object",
          "properties": {
            "reference": {
              "type": "string"
            },
            "errors": {
              "type": "array",
              "items": {}
            }
          },
          "required": [
            "reference",
            "errors"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "bagit-validation-error"
      ]
    }
  },
  "required": [
    "version",
    "timestamp",
    "UUIDs",
    "producer",
    "parameters"
  ],
  "additionalProperties": false
}
