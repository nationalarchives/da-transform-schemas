                        "s3-folder-url": {
                            "type": "string"
                        },
                        "s3-sha256-url": {
                            "type": "string"
                        },
                        "file-type": {
                            "type": "string"
                        },
                        "number-of-retries": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "reference",
                        "s3-folder-url",
                        "s3-sha256-url",
                        "number-of-retries"
                    ]
                }
            },
            "required": [
                "dri-preingest-sip-accessible"
