        },
        "timestamp": {
            "type": "string"
        },
        "UUIDs": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "TDR-UUID": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "TDR-UUID"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "TRE-UUID": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "TRE-UUID"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "TDR-UUID": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "TDR-UUID"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "TRE-UUID": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "TRE-UUID"
                    ]
                }
            ]
        },
        "producer": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "event-name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "environment": {
                    "type": "array",
