{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id":"https://nationalarchives.gov.uk/da-transform/tre/schemas/dri-preingest-sip-accessible",
    "$ref":"https://nationalarchives.gov.uk/da-transform/tre/schemas/tre-event",
    "type": "object",
    "properties": {
        "version": {
            "type": "string"
        },
        "timestamp": {
            "type": "string"
        },
        "UUIDs": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "TDR-UUID": {
                            "type": "string",
                            "description": "Universally Unique Identifier generated by when sent by TDR"
                        }
                    },
                    "required": [
                        "TDR-UUID"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "TRE-UUID": {
                            "type": "string",
                            "description": "Universally Unique Identifier generated upon receiving payload by TRE"
                        }
                    },
                    "required": [
                        "TRE-UUID"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "TDR-UUID": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "TDR-UUID"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "TRE-UUID": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "TRE-UUID"
                    ]
                }
            ]
        },
        "producer": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "" //TODO
                },
                "event-name": {
                    "type": "string",
                    "description": "The name of the event sending this payload for now this should always be dri-preingest-sip-accessible"
                },
                "type": {
                    "type": "string",
                    "description": "" //TODO
                },
                "environment": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "The environment from which the payload was produced",
                        "enum": ["DEV", "INT", "PRD"]
                    }
                }
            },
            "required": [
                "name",
                "event-name",
                "type",
                "environment"
            ]
        },
        "parameters": {
            "type": "object",
            "properties": {
                "dri-preingest-sip-accessible": {
                    "type": "object",
                    "properties": {
                        "reference": {
                            "type": "string",
                            "description": "reference for the attached object"
                        },
                        "s3-folder-url": {
                            "type": "string",
                            "description": "url to directory containing object in AWS s3"
                        },
                        "s3-sha256-url": {
                            "type": "string",
                            "description": "url to the object itself in AWS s3"
                        },
                        "file-type": {
                            "type": "string",
                            "description": "the format of the file or archive i.e. PDF, JPEG, ZIP, TAR"
                        },
                        "number-of-retries": {
                            "type": "integer",
                            "description": "The amount of times this message has been resent to DRI from TRE"
                        }
                    },
                    "required": [
                        "reference",
                        "s3-folder-url",
                        "s3-sha256-url",
                        "number-of-retries"
                    ]
                }
            },
            "required": [
                "dri-preingest-sip-accessible"
            ]
        }
    },
    "required": [
        "version",
        "timestamp",
        "UUIDs",
        "producer",
        "parameters"
    ]
}